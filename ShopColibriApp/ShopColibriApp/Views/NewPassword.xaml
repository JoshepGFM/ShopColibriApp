<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopColibriApp.Views.NewPassword">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="TxtPass1" Placeholder="Cantraseña"/>
            <Entry x:Name="TxtPass2" Placeholder="Confirmar Cantraseña"/>
            <Entry x:Name="TxtPin" Placeholder="000 000" Keyboard="Plain"/>
            <Button x:Name="BtnCambiar" Text="Cambiar" Clicked="BtnCambiar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
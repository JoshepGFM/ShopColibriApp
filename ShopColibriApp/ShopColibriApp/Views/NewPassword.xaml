<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopColibriApp.Views.NewPassword"
             xmlns:GlobalV="clr-namespace:ShopColibriApp.Views.ViewGlo">
    <ContentPage.Content>
        <Grid>
            <GlobalV:Degradado/>
            <StackLayout  VerticalOptions="CenterAndExpand">
                <StackLayout Orientation="Horizontal" Spacing="15">
                    <Entry x:Name="TxtPass1" Placeholder="Cantraseña" IsPassword="True" WidthRequest="320"/>
                    <Switch x:Name="SwVer1" IsToggled="False" Toggled="SwVer1_Toggled" OnColor="#57BB29" HorizontalOptions="EndAndExpand"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal" Spacing="15">
                    <Entry x:Name="TxtPass2" Placeholder="Confirmar Cantraseña" IsPassword="True" WidthRequest="320"/>
                    <Switch x:Name="SwVer2" IsToggled="False" Toggled="SwVer2_Toggled" OnColor="#57BB29" HorizontalOptions="EndAndExpand"/>
                </StackLayout>
                <Entry x:Name="TxtPin" Placeholder="000 000" Keyboard="Numeric"/>
                <Button x:Name="BtnCambiar" Text="Cambiar" Clicked="BtnCambiar_Clicked" CornerRadius="50"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>